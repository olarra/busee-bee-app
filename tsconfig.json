{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["es2017", "es6", "dom"],
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@screens/*": ["app/screens/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["app/shared/*"],
      "@services/*": ["services/*"],
      "@api": ["api/index"]
    },
    "noEmitHelpers": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
